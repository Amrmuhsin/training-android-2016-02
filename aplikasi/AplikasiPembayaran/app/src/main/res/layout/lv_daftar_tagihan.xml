<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produk"
        android:id="@+id/lblNamaProduk"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"
        android:paddingStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomer Pelanggan"
        android:id="@+id/lblNomerPelanggan"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pelanggan"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblNamaPelanggan"
        android:layout_below="@id/lblNamaProduk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Januari 2016"
        android:id="@+id/txtBulanTagihan"
        android:layout_below="@+id/lblNamaPelanggan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:paddingEnd="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bulan Tagihan"
        android:id="@+id/lblBulanTagihan"
        android:layout_alignTop="@+id/txtBulanTagihan"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jatuh Tempo"
        android:id="@+id/lblJatuhTempo"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtBulanTagihan"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 Januari 2016"
        android:id="@+id/txtJatuhTempo"
        android:layout_alignBottom="@+id/lblJatuhTempo"
        android:layout_alignParentEnd="true"
        android:paddingEnd="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rp. 100.000,00"
        android:id="@+id/txtNilai"
        android:layout_below="@+id/lblJatuhTempo"
        android:layout_marginTop="24dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bayar"
        android:id="@+id/btnBayar"
        android:layout_below="@+id/txtNilai"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>